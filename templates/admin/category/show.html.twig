{% extends 'admin/base.html.twig' %}

{% block title %}Administration{% endblock %}

{% form_theme form 'form_layout.html.twig' %}

{% block subbody %}
<h3>{{ category.name }}</h3>
<a class="ui button" href="{{ path('admin_category_create', {'id': category.id}) }}">
	Create
</a>
<table class="ui basic table stackable striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th class="right aligned">Action</th>
		</tr>
	</thead>
	<tbody>
		{% for subcategory in category.categories %}
		<tr>
			<td>{{ subcategory.id }}</td>
			<td>{{ subcategory.name }}</td>
			<td class="right aligned">
				<a href="{{ path('admin_category_edit', {'id': subcategory.id}) }}">
					<i class="pencil alternate icon"></i>
				</a>
				<a href="{{ path('admin_category_delete', {'id': subcategory.id}) }}">
					<i class="trash alternate outline icon"></i>
				</a>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>

{{ knp_pagination_render(categories) }}
{% endblock %}
